    "react-dom": "^19.2.0",
    "react-hook-form": "^7.63.0",
    "recharts": "^3.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",

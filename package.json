  "description": "Genetic algorithm-based factory production optimizer for Medica Scientifica business case",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "build:server": "tsc",
    "build:client": "vite build",
